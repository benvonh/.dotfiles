" editor
set number
set nowrap
set confirm
set mouse=a
set scrolloff=10

" visuals
set visualbell
set termguicolors
set signcolumn=yes
set colorcolumn=120

" search
set incsearch
set nohlsearch

" tabs
set tabstop=4
set shiftwidth=4
set softtabstop=4
set smarttab
set expandtab

" indentation
set shiftround
set autoindent
set smartindent
"set filetype

" backup
set nobackup
set noswapfile
set undofile
set undodir=~/.vim/undodir

" others
set completeopt=menu,menuone,noselect
